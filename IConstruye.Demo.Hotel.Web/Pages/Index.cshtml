@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



    <form method="post">
        
        <div class="searchBoxForm">
            <input asp-for="SearchText" class="searchBox" />
            <input class="searchBoxSubmit" type="submit" value="">
        </div>

        @if (Model != null)
        {
            // Show the result count.
            <p class="sampleText">
                @Html.DisplayFor(m => m.ResultList.Count) Results
            </p>

            @for (var i = 0; i < Model?.ResultList?.Count; i++)
            {
                // Display the hotel name and description.
                @Html.TextAreaFor(m => Model.ResultList[i].Document.HotelName, new { @class = "box1" })
                @Html.TextArea($"desc{i}", Model.ResultList[i].Document.Description, new { @class = "box2" })
            }
        }
    </form>
